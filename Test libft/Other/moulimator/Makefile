NAME = Moulinette

all: $(NAME)

$(NAME):
	@gcc -fPIC -Wall -Werror -Wextra -I ../ -c ../*.c
	@gcc -fPIC -Werror -Wall -Wextra -shared -o libft.so *.o
	./Mouli-nator

clean:
	@rm -rf *.o
	@rm -rf libft.so

re: clean all
